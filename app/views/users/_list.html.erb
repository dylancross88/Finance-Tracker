<table class="table table-striped">
  <thead>
    <tr>
      <th class="page-header" colspan="3">My Friends</th>
    </tr>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @friendships.each do |friend| %>
      <tr>
        <td><%= friend.full_name %></td>
        <td><%= friend.email %></td>
        <td>
          <%= link_to "View Profile", user_path(friend), class: "btn btn-sm btn-primary" %>
          <%= link_to "Unfriend", friendship_path(friend), method: :delete,
              class: "btn btn-sm btn-danger", data: {:confirm => 'Are you sure?'} %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>